{% extends 'base.html.twig' %}

{% block title %}
	Tableau de bord
{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-12 text-center">
			<ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
				<li class="nav-item" role="presentation">
					<button class="nav-link active" id="pills-home-tab" data-bs-toggle="pill" data-bs-target="#pills-home" type="button" role="tab" aria-controls="pills-home" aria-selected="true">Produits</button>
				</li>
				<li class="nav-item" role="presentation">
					<button class="nav-link" id="pills-profile-tab" data-bs-toggle="pill" data-bs-target="#pills-profile" type="button" role="tab" aria-controls="pills-profile" aria-selected="false">Membres</button>
				</li>
				<li class="nav-item" role="presentation">
					<button class="nav-link" id="pills-contact-tab" data-bs-toggle="pill" data-bs-target="#pills-contact" type="button" role="tab" aria-controls="pills-contact" aria-selected="false">Commandes</button>
				</li>

				<li class="nav-item ms-auto" role="presentation">
					<a class="btn btn-success" href="{{path('create_product')}}">
						<i class="bi bi-plus-circle"></i>
						Ajouter un produit</a>
				</li>
			</ul>
			<div
				class="tab-content" id="pills-tabContent">

				{#///////////////////////////////////////////Table Produits//////////////////////////////////////////////#}
				<div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">

					<table class="table">
						<thead>
							<tr>

								<th>#</th>
								<th>Titre</th>
								<th>Description</th>
								<th>Couleur</th>
								<th>Taille</th>
								<th>Collection</th>
								<th>Photo</th>
								<th>Prix</th>
								<th>Stock</th>
								<th>Créer le</th>
								<th>Modifier le</th>
								<th>Action</th>

							</tr>
						</thead>

						<tbody>
							{% for product in products %}

								<tr class="text-center align-middle">

									<td>{{ product.id }}</td>
									<td>{{ product.title | capitalize}}</td>
									<td>{{ product.descript | length > 20 ? product.descript | slice(0, 25) ~ '...': product.descript }}</td>
									<td>{{ product.color }}</td>
									<td>{{ product.size | upper}}</td>
									<td>{{ product.collection | capitalize }}</td>
									<td><img src="{{ asset('uploads/'~ product.photo) }}" alt="{{ product.title }}" width="80" height="75" class="img-custom"></td>
									<td>{{ product.price }}€</td>
									<td>{{ product.stock }}</td>
									<td>{{ product.createdAt | date('d/m/Y') }}</td>
									<td>{{ product.updatedAt | date('d/m/Y') }}</td>

									<td>
										<a href="{{ path('update_product', {'id': product.id}) }}" class="btn btn-info" title="modifier le produit"><i class="bi bi-pencil-square"></i></a>
										<a href="{{ path('soft_delete_product', {'id': product.id}) }}" class="btn btn-danger" title="archiver le produit" onClick="return confirm('Cette action archivera le produit. voulez-vous continuer ?')"><i class="bi bi-trash3"></i></a>

									</td>
								</tr>
								{% endfor %}
							</tbody>
						</tbody>
					</table>


				</div>

				{#///////////////////////////////////////////Table users//////////////////////////////////////////////#}

				<div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">User</div>


				{#///////////////////////////////////////////Table Commande//////////////////////////////////////////////#}

				<div class="tab-pane fade" id="pills-contact" role="tabpanel" aria-labelledby="pills-contact-tab">Commandes</div>
			</div>
		</div>
	</div>

{% endblock %}
